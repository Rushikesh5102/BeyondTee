generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
  // For Production (Docker): 
  // provider = "postgresql"
  // url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("USER") // "USER" or "ADMIN"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relationships
  orders    Order[]
  addresses Address[]
  designs   Design[]
}

model Product {
  id               String   @id @default(uuid())
  name             String
  description      String
  price            Float
  sku              String   @unique
  stock            Int
  category         String   // e.g., "T-Shirt", "Hoodie"
  
  // New Fields
  gender           String   @default("UNISEX") // MEN, WOMEN, UNISEX
  collection       String?  // e.g., "Streetwear", "Anime"
  fit              String?  // "Normal", "Oversized"
  isFeatured       Boolean  @default(false)
  fabricDetails    String?
  careInstructions String?
  
  images           String
  modelPath        String?
  isCustomizable   Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  // Relationships
  orderItems     OrderItem[]
}

model Coupon {
  id        String   @id @default(uuid())
  code      String   @unique
  discount  Float    // Percentage or Fixed amount
  type      String   @default("PERCENTAGE") // PERCENTAGE or FIXED
  isActive  Boolean  @default(true)
  expiresAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Address {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  street    String
  city      String
  state     String
  zip       String
  country   String
  isDefault Boolean  @default(false)
  
  // Relationships
  orders    Order[]
}

model Design {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  name          String
  configuration String     // The 3D config
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Relationships
  orderItems    OrderItem[]
}

model Order {
  id                String      @id @default(uuid())
  userId            String
  user              User        @relation(fields: [userId], references: [id])
  totalAmount       Float
  status            String      @default("PENDING")
  
  shippingAddressId String
  shippingAddress   Address     @relation(fields: [shippingAddressId], references: [id])
  
  paymentIntentId   String?
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  items             OrderItem[]
}

model OrderItem {
  id              String  @id @default(uuid())
  orderId         String
  order           Order   @relation(fields: [orderId], references: [id])
  productId       String
  product         Product @relation(fields: [productId], references: [id])
  quantity        Int
  price           Float
  
  // Customization
  size            String?
  color           String?
  
  designId        String?
  design          Design? @relation(fields: [designId], references: [id])
  
  customizationData String? // Redundant if linking to Design, but kept for snapshot if needed
}
